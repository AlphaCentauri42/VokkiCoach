<UserControl x:Class="VokkiCoach.ucVerwaltungStartMenue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VokkiCoach"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
		<StackPanel Orientation="Vertical" Margin="10">
			<Border Height="50">
				<TextBlock Name="verwaltungMenueText" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="28" FontWeight="Bold">-?-</TextBlock>
			</Border>
			<local:ucLeftMenuItem ItemText="Kategorie" x:Name="mKategorie" MouseDown="mKategorie_MouseDown"/>
			
            <local:ucLeftMenuItem ItemText="Vokabeln" x:Name="mVokabeln" MouseDown="mVokabeln_MouseDown"/>
            
			<local:ucLeftMenuItem ItemText="Übersetzungen" x:Name="mUebersetzungen" MouseDown="mUebersetzungen_MouseDown"/>
			<local:ucLeftMenuItem/>
		</StackPanel>
	</Grid>
</UserControl>
